#!/usr/bin/env bash

set -euo pipefail

ver() {
  local prefix="${1}/"
  local v
  if (( LONG == 1 )); then
    v=$(git describe --tags --long --match "${prefix}*")
  else
    v=$(git describe --tags --match "${prefix}*")
  fi
  echo "${v##"$prefix"}"
}

usage() {
  echo "Usage: $0 [-l|--long] <cli|api|lib>" >&2
  exit 1
}

MODE=""
LONG=0

while [[ $# -gt 0 ]]; do
  case $1 in
    -l|--long)
      LONG=1
      shift
    ;;
    cli)
      [[ -n "$MODE" ]] && usage
      MODE="cli"
      shift
    ;;
    api)
      [[ -n "$MODE" ]] && usage
      MODE="api"
      shift
    ;;
    lib)
      [[ -n "$MODE" ]] && usage
      MODE="lib"
      shift
    ;;
    *)
      usage
    ;;
  esac
done

[[ -z "$MODE" ]] && usage

ver "$MODE"
